
<div id="page_content" class="uk-width-1-1@s uk-width-3-4@m">
  <div class="uk-flex uk-flex-middle uk-flex-center"><div uk-spinner></div></div>
  <script>
    $.post("/ajax", { {{type}}:"{{id}}" }, (result) => { $("#page_content").html(result) });
  </script>
</div>

<div class="uk-width-1-1@s uk-width-1-4@m uk-padding-small">
  <div class="uk-card uk-margin-small uk-card-small uk-card-default uk-card-body">
    <div id="page_side_content">
    </div>
  </div>
  <div class="uk-card uk-margin-small uk-card-small uk-card-default uk-card-body">
  	<div class="uk-inline">
  		{{#if req.user}}
  		<a class="uk-button uk-button-default" href="/users/logout">{{_ "Logout"}}</a>
  		{{else}}
  		<a class="uk-button uk-button-default" href="/users/login">{{_ "Login"}}</a>
  		<a class="uk-button uk-button-default" href="/users/register">{{_ "Register"}}</a>
  		{{/if}}
  	</div>
  </div>
</div>
